<% if(locals.errors){ %> <% locals.errors.forEach(function(error) { %>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <div class="d-flex justify-content-between align-items-center">
        <div class="text-center"><%- error.msg %></div>
        <button
            type="button"
            class="close"
            data-dismiss="alert"
            aria-label="Close"
        >
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>
<% }); %> <% } %> <% if(success_msg != '') { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <div class="d-flex justify-content-between align-items-center">
        <div class="text-center"><%- success_msg %></div>
        <button
            type="button"
            class="close"
            data-dismiss="alert"
            aria-label="Close"
        >
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>
<% } %> <% if(error_msg != ''){ %>
<div
    class="alert alert-danger alert-dismissible fade show d-flex justify-content-between align-items-center"
    role="alert"
>
    <div class="text-center"><%- error_msg %></div>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<% } %> <% if(error != '') { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <div class="d-flex justify-content-between align-items-center">
        <div class="text-center"><%- error %></div>
        <button
            type="button"
            class="close"
            data-dismiss="alert"
            aria-label="Close"
        >
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>
<% } %>
