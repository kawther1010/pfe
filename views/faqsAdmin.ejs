<%- include ("./partials/headerAdmin") %>
<main>
    <div class="container py-5">
        <h1>Add some FAQs to the FAQs Page</h1>
        <div>
            <form action="/dashboard/faqsAdmin" method="post">
                <div class="form-group">
                    <label for="question">Question</label>
                    <input
                        type="text"
                        id="question"
                        name="question"
                        class="form-control"
                        placeholder="Enter Question"
                        autocomplete="off"
                    />
                </div>
                <div class="form-group">
                    <label for="response">Response</label>
                    <input
                        type="text"
                        id="response"
                        name="response"
                        class="form-control"
                        placeholder="Enter response"
                    />
                </div>
                <br />
                <button type="submit" class="btn btn-primary btn-block">
                    submit
                </button>
            </form>
        </div>

        <br><br>

        <h1>Frequently Asked Questions</h1>

        <% if (faqs && faqs.length > 0) { %>
        <div class="accordion mt-4" id="faqAccordion">
            <% faqs.forEach((faq) => { %>
            <div class="card">
                <div class="card-header" id="heading1">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-8">
                                <h2 class="mb-0">
                                    <button
                                        class="btn btn-link"
                                        type="button"
                                        data-toggle="collapse"
                                        data-target="#collapse1"
                                        aria-expanded="true"
                                        aria-controls="collapse1"
                                    >
                                    <%= faq.question %>
                                    </button>
                                </h2>
                            </div>
                            <div class="col-md-4">
                                <button class="btn"><a class="btn btn-primary btn-block" href="/dashboard/faqsAdmin/edit/<%= faq._id %>">edit</a></button>
                                <button class="btn"><a class="btn btn-primary btn-block" href="/dashboard/faqsAdmin/delete/<%= faq._id %>">delete</a></button>
                            </div>
                        </div>
                    </div>
                </div>

                <div
                    id="collapse1"
                    class="collapse show"
                    aria-labelledby="heading1"
                    data-parent="#faqAccordion"
                >
                    <div class="card-body">
                        <%= faq.response %>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
        <% } else { %>
            <h1 class="category-title">FAQs empty</h1>
        <% } %>
    </div>
</main>
<%- include ("./partials/footer") %>

