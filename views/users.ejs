<%- include ("./partials/headerAdmin") %>
<div>
    <% if (users && users.length > 0) { %>
    <div class="category-container">
        <div class="object-list">
            <% users.forEach((user) => { %>
            <a
                href="/dashboard/users/profileAdmin/<%= user._id %>"
                style="color: inherit; text-decoration: none"
            >
                <div class="object-container">
                    <div class="object-image-container">
                        <img
                        src="<%= '/uploads/' + user.profilePicture%>"
                        alt="Profile Picture"
                        />
                    </div>
                    <div class="object-details-container">
                        <h2 class="object-name"><%= user.firstName %> <%= user.lastName %></h2>
                        <p class="object-description">
                            <%= user.email %>
                        </p>
                        <p class="object-price">
                            <%= user.bio %>
                        </p>
                    </div>
                </div>
            </a>
            <% }); %>
        </div>
    </div>
    <% } else { %>
    <h1 class="category-title">Category empty</h1>
    <% } %>
</div>
<%- include ("./partials/footer") %>



<style>
    .category-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .category-title {
        margin-top: 10px;
        font-size: 36px;
        font-weight: bold;
        text-align: center;
    }

    .object-list {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        grid-gap: 20px;
    }

    .object-container {
        background-color: #fff;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        border-radius: 5px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .object-container:hover {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        cursor: pointer;
    }

    .object-image-container {
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .object-image-container img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }

    .object-details-container {
        padding: 20px;
    }

    .object-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .object-description {
        margin-bottom: 10px;
    }

    .object-price {
        font-size: 20px;
        font-weight: bold;
    }
</style>
